<!--pages/detail/detail.wxml-->

<view class="toppic">
    <image src="{{goods_img}}"/>
</view>

<scroll-view scroll-y="true">
  <view class="detail">
    <text class="title">{{goods_title}}</text>
    <text class="price">{{goods_price}}元</text>
  </view>
  <view class="separate"></view>

  <!-- sku选择 -->
  <text>商品详情</text>
  <block wx:for-items="{{detailImg}}" wx:key="name">
    <image class="image_detail" src="{{item}}" />
  </block>
  <view class="temp"></view>
</scroll-view>

<!-- 底部悬浮栏 -->

<view class="detail-nav">
  <view class="line_nav"></view>
  <button class="button-green"  formType="submit">加入购物车</button>
  <button class="button-red" bindtap="immeBuy" formType="submit">立即购买</button>
</view>

<!--购物车-->
<view id="askView" bindtap="binbuycar">
  <image src="../../icon/gouwuchexuanzhong.png"></image>
</view>