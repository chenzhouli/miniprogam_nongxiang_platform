.srcolbox {
    width: 100%;
    height: 450rpx;
    white-space: nowrap;
    margin-top: 20px;
  }

  .item { 
    width: 50%; 
    height: 450rpx; 
    display: inline-block; 
    margin-right: 30rpx; 
    border-radius: 10rpx; 
    text-align: center;
    flex-direction: column;
    background-color: rgb(247, 247, 247);
    border-radius: 15rpx;
  } 
  .item_img{
    width: 100%;
    height: 350rpx;
    border-radius: 15rpx;
  }

  .item_text text{
    padding-top: 10rpx;
    display:block;
    width:100%;
    font-size:30rpx;
    word-break: break-all;
  }

.intro{
    padding-left: 25rpx;
    padding-top: 40rpx;
    font-size: 50rpx;
    font-weight: 600;
    
}
.uploading{
    padding-top: 50rpx;
    padding-bottom: 20rpx;
    background-color: rgb(233, 247, 234);
    border-radius: 20px;
}
.uploading button{
    background-color: rgb(0, 156, 96);
    font-size: 30rpx;
    position: relative;
    width: 30%;
}
.temp {
    height: 100rpx;
  }
