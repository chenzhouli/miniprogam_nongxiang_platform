.toppic image{
    height: 57.41vw;
    width: 100%;
}
.srcolbox {
    width: 100%;
    height: 450rpx;
    white-space: nowrap;
    margin-top: 10px;
  }
   
  .item {
    width: 50%;
    line-height: 450rpx;
    display: inline-block;
    background-color: #999;
    margin-right: 30rpx;
    text-align: center;
    border-radius: 20px;
  }
  .item image{
      height: 80%;
      width: 100%;
      align-items: center;
  }

  .item:nth-of-type(2n) {
    background-color: #666;
  }
.intro{
    padding-left: 25rpx;
    padding-top: 40rpx;
    font-size: 50rpx;
    font-weight: 600;
    
}
.uploading{
    padding-top: 50rpx;
    padding-bottom: 20rpx;
    background-color: rgb(214, 243, 216);
    border-radius: 20px;
}
.uploading button{
    background-color: rgb(0, 156, 96);
    font-size: 30rpx;
    position: relative;
    width: 30%;
}
