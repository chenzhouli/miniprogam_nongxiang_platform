/* pages/detail_tudi/detail_tudi.wxss */
.detail {
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 0rpx;
    padding-top: 30rpx;
  }
  .detail .title {
    
    font-size: 40rpx;
    margin: 10rpx;
    color: black;
    text-align: justify;
  }
  .detail .price {
    color: red;
    font-size: 40rpx;
    margin: 10rpx;
  }
  .line_flag {
    width: 80rpx;
    height: 1rpx;
    display: inline-block;
    margin: 20rpx auto;
    background-color: gainsboro;
    text-align: center;
  }
  .line {
    width: 100%;
    height: 2rpx;
    display: inline-block;
    margin: 20rpx 0rpx;
    background-color: gainsboro;
    text-align: center;
  }
  .detail-nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    float: left;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 1;
    width: 100%;
    height: 100rpx;
  }
  .button-red {
    background-color: #b3dfb1; /* 绿色*/
  }
  .image_detail {
    width: 100%;
  }
  button {
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 30rpx;
    border-radius: 0rpx;
    width: 50%;
    height: 100%;
    line-height: 100rpx;
  }
  /* 占位 */
  .temp {
    height: 100rpx;
  }
  text {
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    margin: 10rpx;
  }
  .text-remark {
    display: block;
    font-size: 25rpx;
    margin: 10rpx;
  }
  .toppic {
    height: 57.41vw;
    width: 100%; 
  }   
  .toppic image {
      width: 100%;
  }
  #onlineView{
    height: 100rpx;
    background: #FFFFFF;
    margin: 24rpx 0;
    padding: 0 15rpx;
    line-height: 88rpx;
    position: relative;  /* 相对定位，让父元素具有定位属性 */
    text-align: left;
  }
  #onlineView > image{
    width: 70rpx;
    height: 70rpx;
    vertical-align: middle; 
  }
  #onlineView > text{    
    font-size: 30rpx;
    font-weight: 600;
    vertical-align: middle;
  }