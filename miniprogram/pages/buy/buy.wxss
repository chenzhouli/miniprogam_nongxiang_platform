/* pages/buy/buy.wxss */
.swiper_1{
    height: 57.41vw;
    width: 100%; 
}
.swiper_1 image{
    width: 100%;
}
#askView {
    position: fixed;
    bottom: 50rpx;
    right: 10rpx;
  }
  #askView > image{
    width: 100rpx;
    height: 100rpx;
  }

  .temp {
    height: 100rpx;
  }

  .container{
    padding: 0;
    display: flex;
    /** 一行放不下时候换行，默认不换行，然后控件会进行缩放进一行内,因为
    flex-shrink默认为0，否则会溢出边框 */
    flex-flow: wrap;/** 一行放不下时进行换行 */
    justify-content: center;/** 设置子项目的水平排列方式 */
    align-items: flex-start;
  }
  .item { 
    width: 45%; 
    height: 450rpx; 
    margin: 15rpx;
    border-radius: 10rpx; 
    text-align: center;
    flex-direction: column;
    background-color: rgb(247, 247, 247);
    border-radius: 15rpx;
  } 
  .item_img{
    width: 100%;
    height: 350rpx;
    border-radius: 15rpx;
  }
  
  .item_text{
    padding-top: 10rpx;
    display:block;
    width:100%;
    word-break: break-all;
  }
  .tit{
      font-size: 30rpx;
      padding-top: 10rpx;
      display:block;
      width:100%;
      word-break: break-all;
  }
  .item_text{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
  .left-tit {
    font-size: 25rpx;
    text-align: justify;
    padding-left: 10rpx;
    color: #fd7171;
  }
  .right-tit {
    font-size: 25rpx;
    color: #888888;
  }
  .nav{
    display: flex;
    justify-content: center;
  }
  .navView{
    display: flex;  /* 应用flex布局 ，所有的子元素排在一行*/
    flex-wrap: wrap; /* 换行*/
    height: 150rpx;
    width: 95%;
    align-content: space-around; /* 多行垂直排列*/
    font-size: 26rpx;
    font-weight: 600;
    background-color: #f3f3f3;
    border-radius: 20px;
  }
  .navView .navItemView{
    flex-direction: column;
    display: flex;
    width: 130rpx;
    align-items: center;
    margin: 0 50rpx;
  }
  .navItemView >image{
    display: flex;
    width: 80rpx;
    height: 80rpx;

  }
 