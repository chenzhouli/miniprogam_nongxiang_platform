<!--pages/mytudi/mytudi.wxml-->
<view>
        <view class='list'>
  <block wx:for='{{tudi_info}}' wx:key="_id" wx:for-item="item">
  <view class="list_item" bindtap="bind_detail" data-tudi_id="{{item._id}}">
      <view class='img'>
        <image src="{{imghref}}{{item.image}}"  mode="scaleToFill"/>
      </view>
      <view class='info'>
        <view class='title'>{{item.name}}</view>
        <view class='num'>x{{item.num}}</view>      
      </view>
      <view class='clear'></view>
  </view>
  </block>
</view>
    
    </view>
