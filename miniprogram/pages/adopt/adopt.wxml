
    <view class='list'>
  <block wx:for='{{dataList}}' wx:key='list' wx:for-item="item">
  <view class="list_item" bindtap="bind_detail" data-tudi_id="{{item._id}}">
      <view class='img'>
        <image src="{{imghref}}{{item.tudi_img}}"  mode="scaleToFill"/>
      </view>
      <view class='info'>
        <view class='title'>{{item.tudi_title}}</view>
        <view class='price'>￥{{item.tudi_price}}</view>
        <view class='num'>销量{{item.tudi_xiaoliang}}</view>
      </view>
      <view class='clear'></view>
  </view>
  </block>
</view>
    
